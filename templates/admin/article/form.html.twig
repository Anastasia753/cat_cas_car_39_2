{{ form_start(articleForm) }}

    {% if articleForm.vars.data.imageFilename %}
        <img
                src="{{ upload_asset('article_uploads', articleForm.vars.data.imageFilename) }}"
                height="100"
                alt=""
        >
    {% endif %}

    {{ form_row(articleForm.image, {
        label: 'Изображение',
        attr: {
            placeholder: 'Выберите изображение'
        }
    }) }}
    {{ form_row(articleForm.title, { label: 'Заголовок статьи' }) }}
    {{ form_row(articleForm.body, { label: 'Текст статьи' }) }}
    {% if articleForm.publishedAt is defined %}
        {{ form_row(articleForm.publishedAt, { label: 'Дата публикации' }) }}
    {% endif %}
    {{ form_row(articleForm.author, { label: 'Автор' }) }}

<button type="submit" class="btn btn-primary">{{ button_text }}</button>
{{ form_end(articleForm) }}